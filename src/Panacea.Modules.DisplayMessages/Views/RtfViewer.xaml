<UserControl
    x:Class="Panacea.Modules.DisplayMessages.Views.RtfViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.DisplayMessages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <RichTextBox
            Name="RichTextBox1"
            Margin="0"
            local:RichTextBoxHelper.DocumentRtf="{Binding Document}"
            BorderThickness="0"
            IsReadOnly="True" />
    </Grid>
</UserControl>
